---
const { title, description, url, image, author } = Astro.props

type Locale = 'en' | 'nl'
const locale = (Astro.currentLocale as Locale) || 'en'

const siteName: Record<Locale, string> = {
  en: 'Incluud - Accessible Open Source Software',
  nl: 'Incluud - Toegankelijke Open Source Software',
}

const siteDescription: Record<Locale, string> = {
  en: 'Incluud develops Open Source accessible software for the web. We focus on creating accessible and inclusive projects that are easy to use and understand by both developers and end-users. Our projects include Astro templates and components with built-in accessibility features.',
  nl: 'Incluud ontwikkelt Open Source toegankelijke software voor het web. We richten ons op het creÃ«ren van toegankelijke en inclusieve projecten die gemakkelijk te gebruiken en te begrijpen zijn door zowel ontwikkelaars als eindgebruikers. Onze projecten omvatten Astro templates en componenten met ingebouwde toegankelijkheidsfuncties.',
}

const metaDescription = description || siteDescription[locale]
const pageTitle = title === 'Home' ? siteName[locale] : `${title} - ${siteName[locale]}`
---

<!-- general meta -->
<meta name="title" content={pageTitle} />
<meta name="description" content={metaDescription} />
<meta name="author" content={author} />

<!-- open graph -->
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={metaDescription} />
<meta property="og:type" content="website" />
<meta property="og:url" content={url} />
<meta property="og:image" content={`${Astro.site}${image}`} />

<!-- twitter card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={metaDescription} />
<meta name="twitter:image" content={`${Astro.site}${image}`} />

<!-- page title -->
<title>{pageTitle}</title>

<!-- linkedin specific -->
<meta property="article:author" content={author} />
<meta name="linkedin:author" content={author} />
